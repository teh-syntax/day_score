[Unit]
Description=uWSGI Emperor
After=syslog.target

[Service]
ExecStart=/usr/local/bin/uwsgi --emperor {{uwsgiVassalsDir}} --logto {{uwsgiLogDir}}/{{appName}}.log
# Requires systemd version 211 or newer
RuntimeDirectory={{appRootPath}}
Restart=always
KillSignal=SIGQUIT
Type=notify
#StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
